<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.example.kamonwan.projecttsg.fragment.HomeFragment">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorHomeTabName" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/view"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@drawable/profile_pic" />

        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/profilePic"
            android:text="Emma Robert"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/rank"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/tvProfile"
            android:layout_below="@id/tvProfile"
            android:layout_toRightOf="@id/profilePic"
            android:src="@drawable/ic_badge" />

        <TextView
            android:id="@+id/tvRank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProfile"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/rank"
            android:paddingTop="10dp"
            android:text="อันดับที่: 123"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Level 1"
            android:textColor="@color/tvLevelColor"
            android:textSize="30dp" />

        <ProgressBar
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:max="100"
            android:maxHeight="5sp"
            android:progress="45"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/ic_bestScore"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_crown" />

            <TextView
                android:id="@+id/tvBestScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ic_bestScore"
                android:text="คะแนนที่ดีที่สุด: 5000"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/ic_score"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_coins" />

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ic_score"
                android:text="คะแนนสะสม: 15100"
                android:textSize="20dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/colorPrimaryButton"
                android:text="เริ่มเกม"
                android:textColor="@color/colorTextButton"
                android:textSize="20dp" />

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>
